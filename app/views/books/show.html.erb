        <%= image_tag @user.get_profile_image(100,100) %>
          <% if @user == current_user %>
        <% end %>
          <table class="table">
            <tbody>
              <tr>
	              <th>name</th>
	              <th><h3><%= @user.name %></h3></th>
              </tr>
              <tr>
	              <th>introduction</th>
	              <th><h3><%= @user.introduction %></h3></th>
              </tr>
            </tbody>
          </table>
        <div class="row">
          <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary", method: :get do %>
            <i class="fas fa-user-cog"></i>
         <% end %>
        </div>
<!--投稿(共通)-->
         <%= render 'users/list', book: @book_new %>
     </div>
<div class="col-md-8 offset-md-1">

<!--自分の投稿詳細1つ-->
<div class="col-md-8">
<h2>Book detail</h2>
  <table>
    <thead>
      <tr>
      <th><%= image_tag @user.get_profile_image(100,100) %></th>
      <th><h3><%= link_to @book.user.name, user_path(@user.id) %></h3></th>
      <th><h3><%= link_to @book.title %></h3></th>
      <th><h3><%= @book.body %></h3></th>
            <% if @user.id == current_user.id %>
               <%= link_to edit_user_path(current_user.id) do %>
           <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
           <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？",class: "btn btn-sm btn-danger" %></td>
              <% end %>
            <% end %>
         </tr>
      </tbody>
  </table>
</div>
<!--@book_newは随時確認して変更する場合がある-->
<!--@bookはbooksのコントローラで定義している-->
<!--book: @book レンダーの先の変数を定義する-->
<!--book：ローカル変数のためbookには何が入るか設定しなければいけないためローカル変数の変数には@book-->
<!--book.newでもOK-->
 <!--book:は<#%= form_with model: book do |f| %> のbookから呼び出されている-->
<!--@book_new はbookkonntoro-ra-noneshow Actionで @book_newを使ったため置き換える-->

